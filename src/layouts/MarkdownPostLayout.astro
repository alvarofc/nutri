---
const { frontmatter } = Astro.props;
import Layout from './Layout.astro';

---

<Layout title={frontmatter.title} description={frontmatter.description}>
  <article class="py-24 sm:py-32 bg-white">
    <!-- Header -->
    <div class="mx-auto max-w-3xl px-6 lg:px-8 text-center mb-16">
      <div class="flex items-center justify-center gap-4 text-sm font-bold tracking-widest text-blue-900/50 uppercase mb-8">
        <time datetime={frontmatter.pubDate}>{frontmatter.pubDate.substring(0, 10)}</time>
        <span>â€¢</span>
        <span>{frontmatter.author}</span>
      </div>
      <h1 class="text-5xl font-serif text-blue-950 sm:text-6xl md:text-7xl leading-tight mb-8">
        {frontmatter.title}
      </h1>
      <h2 class="text-2xl text-blue-900/60 font-light leading-relaxed">
        {frontmatter.subtitle}
      </h2>
      
      <div class="mt-8 flex flex-wrap justify-center gap-2">
        {
          frontmatter.tags.map((tag) => (
            <span class="text-xs font-medium uppercase tracking-widest text-blue-900/40 border border-blue-900/10 px-3 py-1">
              #{tag}
            </span>
          ))
        }
      </div>
    </div>

    <!-- Featured Image -->
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 mb-20">
      <img
        src={frontmatter.imgUrl}
        alt={frontmatter.imgAlt}
        class="w-full aspect-video object-cover bg-stone-100"
      />
    </div>

    <!-- Content -->
    <div class="mx-auto max-w-3xl px-6 lg:px-8 prose prose-lg prose-slate prose-headings:font-serif prose-headings:text-blue-950 prose-p:text-blue-900/80 prose-a:text-blue-900 prose-a:no-underline prose-a:border-b prose-a:border-blue-900/30 hover:prose-a:border-blue-900 prose-img:rounded-none">
      <slot />
    </div>
    
  </article>
</Layout>
