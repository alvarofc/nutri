---
import '@fontsource/inter/latin-400.css';
import '@fontsource/inter/latin-500.css';
import { ViewTransitions } from 'astro:transitions';
import Footer from '../components/layout/Footer.astro';
import Header from '../components/layout/Header.astro';
import { getLangFromUrl, getLocalizedPath, useTranslations } from '../i18n/ui';

interface Props {
  description: string;
  title: string;
  image?: string;
  canonicalUrl?: string;
  keywords?: string;
  type?: 'website' | 'article';
}

const { 
  description, 
  title, 
  image = '/images/social-card.jpg', 
  canonicalUrl = Astro.url.pathname,
  keywords = 'nutrition, dietitian, health, wellness, diet',
  type = 'website'
} = Astro.props;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const site = Astro.site || 'https://alexandranutri.com';
const canonicalURL = new URL(canonicalUrl, site);
const socialImageURL = new URL(image, site);
const esAlternateURL = new URL(getLocalizedPath(Astro.url.pathname, 'es'), site);
const enAlternateURL = new URL(getLocalizedPath(Astro.url.pathname, 'en'), site);
---

<!DOCTYPE html>
<html lang={lang} x-cloak x-data :class="{ 'dark': $store.theme.isDark }">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    
    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="Alexandra" />
    <meta name="robots" content="index, follow" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Hreflang Tags -->
    <link rel="alternate" hreflang="es" href={esAlternateURL} />
    <link rel="alternate" hreflang="en" href={enAlternateURL} />
    <link rel="alternate" hreflang="x-default" href={esAlternateURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImageURL} />
    <meta property="og:image:alt" content={title} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content={lang} />
    <meta property="og:site_name" content="Alexandra Nutritionist" />
    <meta property="og:article:author" content="Alexandra" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:site" content="@alexandranutri" />
    <meta property="twitter:creator" content="@alexandranutri" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImageURL} />
    <meta property="twitter:image:alt" content={title} />
    
    <!-- Sitemap -->
    <link rel="sitemap" href="/sitemap-index.xml" />
    
    <ViewTransitions />
    
    <slot name="head" />

    <!-- Structured Data / JSON-LD - Professional Service -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "ProfessionalService",
      "name": lang === 'es' ? "Alexandra Nutricionista" : "Alexandra Nutritionist",
      "url": site,
      "logo": new URL("/assets/alexandra-2.png", site).toString(),
      "image": socialImageURL.toString(),
      "description": description,
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Madrid",
        "addressRegion": "Comunidad de Madrid",
        "postalCode": "28007",
        "addressCountry": lang === 'es' ? "España" : "Spain"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": "40.4168",
        "longitude": "-3.7038"
      },
      "telephone": "+34-644-381-191",
      "priceRange": "€€",
      "openingHours": "Mo,Tu,We,Th,Fr 09:00-18:00",
      "sameAs": [
        "https://www.facebook.com/alexandranutri",
        "https://www.instagram.com/alexandranutri",
        "https://twitter.com/alexandranutri"
      ],
      "areaServed": [
        {
          "@type": "City",
          "name": "Madrid"
        },
        {
          "@type": "Country",
          "name": lang === 'es' ? "España" : "Spain"
        }
      ]
    })}></script>
    
    <!-- Structured Data / JSON-LD - Local Business -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": lang === 'es' ? "Alexandra Nutricionista" : "Alexandra Nutritionist",
      "image": socialImageURL.toString(),
      "@id": new URL("#LocalBusiness", site).toString(),
      "url": site,
      "telephone": "+34-644-381-191",
      "priceRange": "€€",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Cruz del Sur 24",
        "addressLocality": "Madrid",
        "postalCode": "28007",
        "addressRegion": "Comunidad de Madrid",
        "addressCountry": "ES"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": 40.4168,
        "longitude": -3.7038
      },
      "openingHoursSpecification": [
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": [
            "Monday",
            "Tuesday",
            "Wednesday",
            "Thursday",
            "Friday"
          ],
          "opens": "09:00",
          "closes": "18:00"
        }
      ],
      "sameAs": [
        "https://www.facebook.com/alexandranutri",
        "https://www.instagram.com/alexandranutri",
        "https://twitter.com/alexandranutri"
      ]
    })}></script>
  </head>
  <body
    class="bg-stone-50 text-primary-950 dark:bg-primary-950 dark:text-primary-200 antialiased transition"
  >
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    <style is:global>
      [x-cloak] {
        display: none !important;
      }
    </style>
    
    <!-- Alpine.js and plugins from CDN -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.12.3/dist/cdn.min.js"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/@alpinejs/collapse@3.12.3/dist/cdn.min.js"></script>
    
    <script is:inline>
      // Initialize Alpine.js store for theme
      document.addEventListener('alpine:init', () => {
        Alpine.store('theme', {
          isDark: localStorage.getItem('theme') === 'dark' || 
                 (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches),
          toggle() {
            this.isDark = !this.isDark;
            localStorage.setItem('theme', this.isDark ? 'dark' : 'light');
          }
        });
      });
    </script>

    <script is:inline>
      (function () {
        if (typeof window === 'undefined') {
          return;
        }

        var STORAGE_KEY = 'preferredLanguage';

        function persistLanguagePreference(lang) {
          if (!lang) {
            return;
          }

          try {
            localStorage.setItem(STORAGE_KEY, lang);
          } catch (error) {
            /* Ignore persistence errors */
          }

          try {
            sessionStorage.setItem(STORAGE_KEY, lang);
          } catch (error) {
            /* Ignore persistence errors */
          }
        }

        document.addEventListener(
          'click',
          function (event) {
            var target = event.target;
            if (!(target instanceof Element)) {
              return;
            }

            var langTrigger = target.closest('[data-lang-preference]');
            if (!langTrigger) {
              return;
            }

            persistLanguagePreference(langTrigger.getAttribute('data-lang-preference'));
          },
          true
        );
      })();
    </script>
  </body>
</html>
