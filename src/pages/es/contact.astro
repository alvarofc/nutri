---
import ContactForm from '../../components/contact/ContactForm.astro';
import ContactInfo from '../../components/contact/ContactInfo.astro';
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout
  title={`${t('contact.title')} | Alexandra Nutricionista Madrid`}
  description={`${t('contact.subtitle')}. Programa una consulta con Alexandra, nutricionista certificada en Madrid para comenzar tu camino hacia la salud hoy mismo.`}
  keywords="consulta nutrición, contacto nutricionista, programar cita, servicios nutrición, contacto asesoramiento salud, nutricionista Madrid"
  type="website"
  canonicalUrl="/es/contact"
>
  <ContactInfo />
  <ContactForm />
</Layout>
