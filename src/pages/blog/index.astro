---
import Layout from '../../layouts/Layout.astro';
const allPosts = await Astro.glob('./posts/*.md');
---

<Layout title="Blog" description=".">
  <section class="py-16 sm:py-20">
    <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
      <div class="flex flex-col gap-16">
        <div class="flex flex-col gap-4 sm:gap-6 text-center">
        <h1 class="text-4xl font-medium tracking-tight sm:text-5xl lg:text-6xl">Blog</h1>
        <p class="text-primary-950/70 dark:text-primary-200/70 mx-auto max-w-xl text-lg sm:text-xl">
          Ideas, recomendaciones y consejos que me gusta compartir.
        </p>
        </div>
        <div class="grid gap-8 lg:grid-cols-3 h-screen">
        {
            allPosts.map((post) => (
                
                <a href={post.url} class="flex flex-col gap-4 rounded bg-gray-200">
                    <div class="flex flex-col gap-2">
                        <h2 class="text-xl font-medium tracking-tight sm:text-2xl lg:text-3xl">{post.frontmatter.title}</h2>
                        <p class="text-primary-950/70 dark:text-primary-200/70 text-lg sm:text-xl">{post.frontmatter.description}</p>
                    </div>
                    <div class="flex flex-col gap-2">
                        <p class="text-primary-950/70 dark:text-primary-200/70 text-lg sm:text-xl">{post.frontmatter.date}</p>
                    </div>
                </a>
            ))
        }
        </div>
      </div>
    </div>
  </section>
</Layout>
