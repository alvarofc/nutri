---
import ContactForm from '../../components/contact/ContactForm.astro';
import ContactInfo from '../../components/contact/ContactInfo.astro';
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout
  title={`${t('contact.title')} | Alexandra Nutritionist Madrid`}
  description={`${t('contact.subtitle')}. Schedule a consultation with Alexandra, certified nutritionist based in Madrid, Spain to start your health journey today.`}
  keywords="nutrition consultation Madrid, contact nutritionist Spain, schedule appointment Madrid, nutrition services Spain, health coaching contact Madrid"
  type="website"
  canonicalUrl="/en/contact"
>
  <ContactInfo />
  <ContactForm />
</Layout>
