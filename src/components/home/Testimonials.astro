---
import { getLangFromUrl, useTranslations } from '../../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const testimonials = [
  {
    name: t('testimonials.pilar.name'),
    description: t('testimonials.pilar.description'), 
    image: '/assets/testimonial-1.webp',
    message: t('testimonials.pilar.message'),
  },
  {
    name: t('testimonials.rosa.name'),
    description: t('testimonials.rosa.description'),
    image: '/assets/testimonial-2.webp',
    message: t('testimonials.rosa.message'),
  },
  {
    name: t('testimonials.christina.name'),
    description: t('testimonials.christina.description'),
    image: '/assets/testimonial-3.webp',
    message: t('testimonials.christina.message'),
  },
];
---

<section class="bg-white py-20 sm:py-28">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-1.5 bg-brand-blush text-brand-rose text-xs font-medium uppercase tracking-widest rounded-full mb-4">
        {lang === 'es' ? 'Testimonios' : 'Testimonials'}
      </span>
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-serif font-medium text-brand-black max-w-2xl mx-auto" set:html={t('testimonials.title')} />
    </div>

    <!-- Testimonials Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {testimonials.map((testimonial, index) => (
        <div class="bg-brand-cream rounded-2xl p-8 flex flex-col">
          <!-- Stars -->
          <div class="flex gap-1 mb-6">
            {[...Array(5)].map(() => (
              <svg class="w-4 h-4 text-brand-accent" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
              </svg>
            ))}
          </div>

          <!-- Quote -->
          <blockquote class="flex-1 mb-8">
            <p class="text-brand-gray font-light leading-relaxed italic">
              {testimonial.message}
            </p>
          </blockquote>

          <!-- Author -->
          <div class="flex items-center gap-4 pt-6 border-t border-brand-light">
            <img 
              src={testimonial.image} 
              alt={testimonial.name}
              class="w-12 h-12 rounded-full object-cover"
            />
            <div>
              <p class="font-medium text-brand-black text-sm">
                {testimonial.name}
              </p>
              <p class="text-xs text-brand-muted">
                {testimonial.description}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
