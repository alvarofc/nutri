---
import { getLangFromUrl, useTranslations } from '../../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const testimonials = [
  {
    name: t('testimonials.pilar.name'),
    description: t('testimonials.pilar.description'), 
    image: '/assets/testimonial-1.webp',
    message: t('testimonials.pilar.message'),
  },
  {
    name: t('testimonials.rosa.name'),
    description: t('testimonials.rosa.description'),
    image: '/assets/testimonial-2.webp',
    message: t('testimonials.rosa.message'),
  },
  {
    name: t('testimonials.christina.name'),
    description: t('testimonials.christina.description'),
    image: '/assets/testimonial-3.webp',
    message: t('testimonials.christina.message'),
  },
];
---

<section class="py-16 sm:py-20">
  <div class="v mx-auto px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col items-center gap-12 lg:gap-20">
      <div class="flex flex-col items-center gap-6">
        <span class="h-px w-48 bg-blue-900/30 dark:bg-white/30"></span>
        <div class="mx-auto max-w-2xl text-center text-4xl sm:text-5xl font-serif font-light text-blue-950 dark:text-white leading-snug" set:html={t('testimonials.title')} />
      </div>
      <div
        class="divide-blue-900/10 dark:divide-blue-300/10 grid divide-y lg:grid-cols-3 lg:divide-x lg:divide-y-0"
      >
        {
          testimonials.map((testimonial) => (
            <figure class="mx-auto flex max-w-lg flex-col items-center gap-6 py-8 lg:px-8 lg:py-0">
              <div class="flex flex-row gap-2">
                {[...Array(5)].map(() => (
                  <svg
                    class="text-blue-900 dark:text-blue-400 h-6 w-6"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                    aria-hidden="true"
                  >
                    <path d="M12.0006 18.26L4.94715 22.2082L6.52248 14.2799L0.587891 8.7918L8.61493 7.84006L12.0006 0.5L15.3862 7.84006L23.4132 8.7918L17.4787 14.2799L19.054 22.2082L12.0006 18.26Z" />
                  </svg>
                ))}
              </div>
              <blockquote class="text-primary-950/70 dark:text-primary-200/70 text-center text-lg italic leading-loose">
                <p>{testimonial.message}</p>
              </blockquote>
              <figcaption class="flex flex-col gap-4">
                <img class="mx-auto h-8 w-8 rounded-full" src={testimonial.image} alt="" />
                <div class="text-center">
                  <div class="text-base font-medium">{testimonial.name}</div>
                  <div class="text-primary-950/70 dark:text-primary-200/70 text-sm">
                    {testimonial.description}
                  </div>
                </div>
              </figcaption>
            </figure>
          ))
        }
      </div>
    </div>
  </div>
</section>
