---
import { getLangFromUrl, useTranslations } from '../../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const partners = [
  { name: "CODINMA", full: "Colegio de Dietistas" },
  { name: "UCM", full: "Universidad Complutense" },
  { name: "AEDN", full: "Academia Espa√±ola" },
  { name: "ISNS", full: "Nutrition Research" }
];
---

<section class="bg-white py-12 border-y border-brand-light/50">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col items-center gap-6">
      <p class="text-xs font-medium uppercase tracking-widest text-brand-muted">
        {t('home.trust.title')}
      </p>
      
      <div class="flex flex-wrap justify-center items-center gap-x-10 gap-y-4">
        {partners.map((partner) => (
          <div class="flex items-center gap-2 opacity-50 hover:opacity-100 transition-opacity">
            <span class="text-xl font-serif font-medium text-brand-black tracking-tight">
              {partner.name}
            </span>
            <span class="hidden sm:block text-[0.6rem] uppercase tracking-wider text-brand-muted max-w-[70px] leading-tight">
              {partner.full}
            </span>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
