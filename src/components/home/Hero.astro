---
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Social links
const socials = [
  { name: 'Instagram', href: 'https://instagram.com/tu.nutri.alexandra', icon: 'instagram' },
  { name: 'Facebook', href: 'https://facebook.com/', icon: 'facebook' },
];
---

<section class="relative bg-brand-cream overflow-hidden">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center min-h-[calc(100vh-72px)] py-16 lg:py-24">
      
      <!-- Left: Content -->
      <div class="order-2 lg:order-1">
        <!-- Announcement Badge -->
        <div class="mb-6">
          <span class="inline-flex items-center gap-2 px-4 py-1.5 bg-brand-blush/50 text-brand-accent text-xs font-medium uppercase tracking-widest rounded-full">
            <span class="w-1.5 h-1.5 bg-brand-accent rounded-full animate-pulse"></span>
            {lang === 'es' ? 'Citas Disponibles' : 'Now Booking'}
          </span>
        </div>

        <!-- Hero Headline -->
        <h1 class="font-serif text-hero font-medium tracking-tight text-brand-black leading-[1.1] mb-6">
          {lang === 'es' ? (
            <>
              Nutrición que<br/>
              <span class="text-brand-accent">transforma</span><br/>
              tu vida
            </>
          ) : (
            <>
              Nutrition that<br/>
              <span class="text-brand-accent">transforms</span><br/>
              your life
            </>
          )}
        </h1>

        <!-- Subtitle -->
        <p class="text-lg text-brand-gray font-light leading-relaxed mb-8 max-w-md">
          {lang === 'es' 
            ? 'Dietista-Nutricionista especializada en salud hormonal. Sin dietas restrictivas. Sin culpa. Solo ciencia aplicada a tu bienestar.'
            : 'Dietitian-Nutritionist specialized in hormonal health. No restrictive diets. No guilt. Just science applied to your wellbeing.'}
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 mb-10">
          <a
            href={getLocalizedPath('/pricing', lang)}
            class="group bg-brand-accent text-white px-8 py-4 text-sm font-medium rounded-full hover:bg-brand-accent/90 transition-all duration-300 flex items-center justify-center gap-2"
          >
            <span>{t('cta.contact')}</span>
            <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
          <a
            href={getLocalizedPath('/about', lang)}
            class="group border border-brand-black/20 text-brand-black px-8 py-4 text-sm font-medium rounded-full hover:border-brand-accent hover:text-brand-accent transition-all duration-300 flex items-center justify-center gap-2"
          >
            <span>{t('cta.learn')}</span>
          </a>
        </div>

        <!-- Social + Location Info -->
        <div class="flex items-center gap-6 text-sm text-brand-muted">
          <div class="flex items-center gap-3">
            {socials.map((social) => (
              <a
                href={social.href}
                target="_blank"
                rel="noopener noreferrer"
                class="w-9 h-9 flex items-center justify-center rounded-full border border-brand-light hover:border-brand-accent hover:text-brand-accent transition-all"
                aria-label={social.name}
              >
                {social.icon === 'instagram' && (
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                )}
                {social.icon === 'facebook' && (
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                )}
              </a>
            ))}
          </div>
          <span class="h-4 w-px bg-brand-light"></span>
          <span>{lang === 'es' ? 'Madrid · Online' : 'Madrid · Online'}</span>
        </div>
      </div>

      <!-- Right: Image -->
      <div class="order-1 lg:order-2 relative">
        <div class="relative aspect-[4/5] rounded-2xl overflow-hidden bg-brand-blush">
          <img 
            src="/assets/alex-front.webp" 
            alt="Alexandra Ivanova"
            class="w-full h-full object-cover"
          />
          <!-- Decorative elements -->
          <div class="absolute -bottom-4 -left-4 w-24 h-24 bg-brand-accent/10 rounded-full blur-2xl"></div>
          <div class="absolute -top-4 -right-4 w-32 h-32 bg-brand-blush rounded-full blur-2xl"></div>
        </div>
        
        <!-- Floating badge -->
        <div class="absolute bottom-8 -left-4 sm:left-8 bg-white rounded-2xl shadow-lg p-4 sm:p-5">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-brand-accent/10 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-brand-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <p class="font-medium text-brand-black text-sm">MAD01541</p>
              <p class="text-xs text-brand-muted">{lang === 'es' ? 'Colegiada' : 'Registered'}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
