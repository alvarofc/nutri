---
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="bg-brand-cream py-20 sm:py-28 overflow-hidden">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      
      <!-- Left: Image -->
      <div class="relative">
        <div class="aspect-[4/5] rounded-2xl overflow-hidden">
          <img 
            src="/assets/about.webp" 
            alt="Alexandra Ivanova"
            class="w-full h-full object-cover"
          />
        </div>
        <!-- Decorative elements -->
        <div class="absolute -bottom-6 -right-6 w-48 h-48 bg-brand-blush rounded-full blur-3xl opacity-60"></div>
        <div class="absolute -top-6 -left-6 w-32 h-32 bg-brand-accent/20 rounded-full blur-2xl"></div>
      </div>

      <!-- Right: Content -->
      <div>
        <span class="inline-block px-4 py-1.5 bg-brand-accent/10 text-brand-accent text-xs font-medium uppercase tracking-widest rounded-full mb-6">
          {lang === 'es' ? 'Conóceme' : 'About Me'}
        </span>
        
        <h2 class="text-3xl sm:text-4xl font-serif font-medium text-brand-black mb-6">
          {t('about.section.title')}
        </h2>
        
        <p class="text-brand-gray leading-relaxed mb-8">
          {t('about.section.description')}
        </p>

        <!-- Stats Row -->
        <div class="grid grid-cols-3 gap-6 py-8 border-y border-brand-light mb-8">
          <div class="text-center">
            <span class="block text-3xl font-serif font-medium text-brand-accent">5+</span>
            <span class="text-xs uppercase tracking-widest text-brand-muted">{lang === 'es' ? 'Años' : 'Years'}</span>
          </div>
          <div class="text-center">
            <span class="block text-3xl font-serif font-medium text-brand-accent">200+</span>
            <span class="text-xs uppercase tracking-widest text-brand-muted">{lang === 'es' ? 'Pacientes' : 'Patients'}</span>
          </div>
          <div class="text-center">
            <span class="block text-3xl font-serif font-medium text-brand-accent">100%</span>
            <span class="text-xs uppercase tracking-widest text-brand-muted">{lang === 'es' ? 'Pasión' : 'Passion'}</span>
          </div>
        </div>

        <a
          href={getLocalizedPath('/about', lang)}
          class="inline-flex items-center gap-2 text-brand-accent font-medium hover:gap-3 transition-all"
        >
          <span>{t('about.section.cta')}</span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
