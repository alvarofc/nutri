---
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const services = [
  {
    step: '01',
    name: t('services.step1.name'),
    description: t('services.step1.description'),
    image: '/assets/about.webp'
  },
  {
    step: '02',
    name: t('services.step2.name'),
    description: t('services.step2.description'),
    image: '/assets/alex-front.webp'
  },
  {
    step: '03',
    name: t('services.step3.name'),
    description: t('services.step3.description'),
    image: '/assets/hero.webp'
  },
];
---

<section class="bg-brand-ivory py-20 sm:py-28">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-1.5 bg-brand-accent/10 text-brand-accent text-xs font-medium uppercase tracking-widest rounded-full mb-4">
        {t('services.methodology')}
      </span>
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-serif font-medium text-brand-black mb-4">
        {t('services.title')}
      </h2>
      <p class="text-brand-muted max-w-xl mx-auto">
        {lang === 'es' 
          ? 'Un proceso personalizado diseñado para ti y tus objetivos únicos.'
          : 'A personalized process designed for you and your unique goals.'}
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {services.map((service, index) => (
        <div class="group bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-lg transition-shadow duration-300">
          <!-- Image -->
          <div class="aspect-[4/3] overflow-hidden">
            <img 
              src={service.image} 
              alt={service.name}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
            />
          </div>
          
          <!-- Content -->
          <div class="p-6 sm:p-8">
            <div class="flex items-center gap-3 mb-4">
              <span class="w-8 h-8 bg-brand-accent/10 rounded-full flex items-center justify-center text-sm font-medium text-brand-accent">
                {service.step}
              </span>
              <div class="flex-1 h-px bg-brand-light"></div>
            </div>
            <h3 class="text-xl font-serif font-medium text-brand-black mb-3">
              {service.name}
            </h3>
            <p class="text-brand-muted text-sm leading-relaxed">
              {service.description}
            </p>
          </div>
        </div>
      ))}
    </div>

    <!-- Bottom Quote -->
    <div class="mt-16 text-center">
      <blockquote class="text-xl sm:text-2xl font-serif italic text-brand-gray max-w-2xl mx-auto">
        "{lang === 'es' 
          ? 'Cuando entiendes tu cuerpo, te empoderas.'
          : 'When you understand your body, you empower yourself.'}"
      </blockquote>
      <div class="flex items-center justify-center gap-3 mt-6">
        <div class="w-10 h-10 rounded-full overflow-hidden">
          <img src="/assets/alex-front.webp" alt="Alexandra" class="w-full h-full object-cover"/>
        </div>
        <cite class="text-sm font-medium text-brand-black not-italic">Alexandra Ivanova</cite>
      </div>
    </div>
  </div>
</section>
