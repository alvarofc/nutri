---
import { getLangFromUrl, useTranslations } from '../../i18n/ui';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const ctaData = {
  en: {
    title: "Still have questions?",
    description: "Please describe your case to receive a personalized response. I'm here to help you on your wellness journey.",
    buttonText: "Get in Touch"
  },
  es: {
    title: "¿Todavía tienes dudas?",
    description: "Por favor, describe tu caso para recibir una respuesta personalizada. Estoy aquí para ayudarte en tu camino hacia el bienestar.",
    buttonText: "Contáctame"
  }
};

const currentCtaData = ctaData[lang] || ctaData.es;
const contactPath = lang === 'en' ? '/en/contact' : '/contact';
---

<section class="py-20 sm:py-28 bg-white">
  <div class="mx-auto max-w-2xl px-4 text-center sm:px-6 lg:max-w-4xl lg:px-8">
    <div class="bg-brand-accent rounded-3xl px-8 py-16 sm:px-12 sm:py-20">
      <div class="flex flex-col items-center gap-8">
        <!-- Icon -->
        <div class="w-16 h-16 rounded-full bg-white/20 flex items-center justify-center">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
          </svg>
        </div>
        
        <div class="flex flex-col gap-4">
          <h2 class="font-serif text-3xl sm:text-4xl text-white">
            {currentCtaData.title}
          </h2>
          <p class="text-white/80 text-lg max-w-xl leading-relaxed">
            {currentCtaData.description}
          </p>
        </div>
        
        <a
          href={contactPath}
          class="inline-flex items-center justify-center rounded-full bg-white px-8 py-4 text-base font-medium text-brand-accent transition hover:bg-brand-ivory hover:scale-105 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white"
        >
          {currentCtaData.buttonText}
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
