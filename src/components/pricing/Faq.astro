---
import { getLangFromUrl, useTranslations } from '../../i18n/ui';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const questions = [
  {
    id: 'faq-1',
    title: t('faq.q1.title'),
    answer: t('faq.q1.answer'),
  },
  {
    id: 'faq-2',
    title: t('faq.q2.title'),
    answer: t('faq.q2.answer'),
  },
  {
    id: 'faq-3',
    title: t('faq.q3.title'),
    answer: t('faq.q3.answer'),
  },
  {
    id: 'faq-4',
    title: t('faq.q4.title'),
    answer: t('faq.q4.answer'),
  },
  {
    id: 'faq-5',
    title: t('faq.q5.title'),
    answer: t('faq.q5.answer'),
  },
  {
    id: 'faq-6',
    title: t('faq.q6.title'),
    answer: t('faq.q6.answer'),
  },
];
---

<section class="py-20 sm:py-28 bg-brand-ivory">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="grid gap-12 lg:grid-cols-3 lg:gap-16">
      <!-- Header -->
      <div>
        <span class="inline-flex items-center gap-2 rounded-full bg-brand-accent/10 px-4 py-1.5 text-sm font-medium text-brand-accent mb-4">
          FAQ
        </span>
        <h2 class="font-serif text-3xl sm:text-4xl text-brand-black leading-tight">
          {t('faq.title')}
        </h2>
        <p class="mt-4 text-brand-muted leading-relaxed">
          {lang === 'en' ? "Can't find what you're looking for? Feel free to contact me directly." : 'Â¿No encuentras lo que buscas? No dudes en contactarme directamente.'}
        </p>
      </div>
      
      <!-- Accordion -->
      <div class="lg:col-span-2">
        <dl
          class="space-y-4"
          x-data="{ selected: null, toggle(value) { this.selected = this.selected === value ? null : value } }"
        >
          {
            questions.map((question, index) => (
              <div
                class="bg-white rounded-2xl overflow-hidden transition-shadow hover:shadow-md"
                x-data={`{ id: ${index}, get isOpen() { return this.id === this.selected } }`}
              >
                <dt>
                  <button
                    type="button"
                    class="group flex w-full items-center justify-between px-6 py-5 text-left transition focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-brand-accent focus-visible:ring-inset rounded-2xl"
                    aria-controls={question.id}
                    x-on:click="toggle(id)"
                    aria-expanded="false"
                    x-bind:aria-expanded="isOpen.toString()"
                  >
                    <span class="font-medium text-brand-black group-hover:text-brand-accent transition-colors">
                      {question.title}
                    </span>
                    <span class="ml-6 flex h-8 w-8 items-center justify-center rounded-full bg-brand-ivory group-hover:bg-brand-accent/10 transition-colors">
                      <svg
                        class="text-brand-accent h-5 w-5 transform transition duration-200 ease-out"
                        x-bind:class="{ 'rotate-180': isOpen }"
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                        aria-hidden="true"
                      >
                        <path d="M11.9997 13.1714L16.9495 8.22168L18.3637 9.63589L11.9997 15.9999L5.63574 9.63589L7.04996 8.22168L11.9997 13.1714Z" />
                      </svg>
                    </span>
                  </button>
                </dt>
                <dd 
                  class="px-6 pb-5" 
                  id={question.id} 
                  x-show="isOpen" 
                  x-cloak 
                  x-collapse
                >
                  <p class="text-brand-muted leading-relaxed">
                    {question.answer}
                  </p>
                </dd>
              </div>
            ))
          }
        </dl>
      </div>
    </div>
  </div>
</section>
