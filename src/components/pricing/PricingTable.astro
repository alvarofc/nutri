---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <!-- Individual Sessions -->
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-center mb-8">{currentData.sections.individual}</h2>
      <div class="grid gap-8 lg:grid-cols-3">
      {
        individualSessions.map((item) => (
          <div class="relative flex flex-col gap-8 rounded-3xl p-8 border border-gray-200 dark:border-gray-800">
            <div class="flex-1">
              <h3 class="text-xl font-medium">{item.name}</h3>
              <p class="mt-4 flex items-baseline">
                <span class="text-4xl font-medium tracking-tight">{item.price}</span>
              </p>
              <p class="text-primary-950/70 dark:text-primary-200/70 mt-6">{item.description}</p>

              <ul role="list" class="mt-6 space-y-4">
                {item.features.map((feature) => (
                  <li class="flex gap-3">
                    <svg
                      class="text-primary-600 dark:text-primary-400 h-6 w-6 flex-shrink-0"
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                      aria-hidden="true"
                    >
                      <path d="M12 22C6.47715 22 2 17.5228 2 12C2 6.47715 6.47715 2 12 2C17.5228 2 22 6.47715 22 12C22 17.5228 17.5228 22 12 22ZM11.0026 16L18.0737 8.92893L16.6595 7.51472L11.0026 13.1716L8.17421 10.3431L6.75999 11.7574L11.0026 16Z" />
                    </svg>
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
            <a
              href="/contact"
              class="bg-primary-600 dark:bg-primary-400 hover:bg-primary-700 dark:hover:bg-primary-300 focus-visible:outline-primary-600 dark:focus-visible:outline-primary-400 dark:text-primary-950 inline-flex w-full items-center justify-center rounded-full border border-transparent px-5 py-3 text-base font-medium text-white transition focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2"
            >
              {item.action}
            </a>
          </div>
        ))
      }
      </div>
    </div>
    
    <!-- Packages/Bonos -->
    <div>
      <h2 class="text-3xl font-bold text-center mb-8">{currentData.sections.packages}</h2>
      <div class="grid gap-8 lg:grid-cols-3">
        {
          packages.map((item) => (
            <div class="relative flex flex-col gap-8 rounded-3xl p-8 bg-primary-500/10 dark:bg-primary-400/10 border border-primary-200 dark:border-primary-800">
              <div class="flex-1">
                <h3 class="text-xl font-medium">{item.name}</h3>
                <p class="mt-4 flex flex-col">
                  <span class="text-lg line-through text-gray-500">{item.originalPrice}</span>
                  <span class="text-4xl font-medium tracking-tight">{item.price}</span>
                </p>
                <p class="text-primary-950/70 dark:text-primary-200/70 mt-6">{item.description}</p>

                <ul role="list" class="mt-6 space-y-4">
                  {item.features.map((feature) => (
                    <li class="flex gap-3">
                      <svg
                        class="text-primary-600 dark:text-primary-400 h-6 w-6 flex-shrink-0"
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                        aria-hidden="true"
                      >
                        <path d="M12 22C6.47715 22 2 17.5228 2 12C2 6.47715 6.47715 2 12 2C17.5228 2 22 6.47715 22 12C22 17.5228 17.5228 22 12 22ZM11.0026 16L18.0737 8.92893L16.6595 7.51472L11.0026 13.1716L8.17421 10.3431L6.75999 11.7574L11.0026 16Z" />
                      </svg>
                      <span class="text-primary-600 dark:text-primary-400 font-medium">{feature}</span>
                    </li>
                  ))}
                </ul>
              </div>
              <a
                href="/contact"
                class="bg-primary-600 dark:bg-primary-400 hover:bg-primary-700 dark:hover:bg-primary-300 focus-visible:outline-primary-600 dark:focus-visible:outline-primary-400 dark:text-primary-950 inline-flex w-full items-center justify-center rounded-full border border-transparent px-5 py-3 text-base font-medium text-white transition focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2"
              >
                {item.action}
              </a>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
