---
import { getLangFromUrl, getLocalizedPath, useTranslations } from '../../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div
  class="flex flex-col items-start"
  itemscope
  itemtype="https://schema.org/Organization"
>
  <a
    href={getLocalizedPath('/', lang)}
    class="group"
    itemprop="url"
    aria-label={t('header.homepage.aria')}
  >
    <span
      class="block font-serif text-xl sm:text-2xl font-medium tracking-tight text-brand-black transition-colors group-hover:text-brand-accent"
    >
      Alexandra
    </span>
    <span class="block text-[0.65rem] uppercase tracking-widest text-brand-muted -mt-0.5">
      {lang === 'es' ? 'Nutricionista' : 'Nutritionist'}
    </span>
  </a>
</div>
