---
import { getLangFromUrl, useTranslations, getLocalizedPath, languages } from '../../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const links = [
  {
    ref: '01',
    name: t('nav.home'),
    href: getLocalizedPath('/', lang),
  },
  {
    ref: '02',
    name: t('nav.about'),
    href: getLocalizedPath('/about', lang),
  },
  {
    ref: '03',
    name: t('nav.pricing'),
    href: getLocalizedPath('/pricing', lang),
  },
  {
    ref: '04',
    name: t('nav.contact'),
    href: getLocalizedPath('/contact', lang),
  },
  {
    ref: '05',
    name: t('nav.blog'),
    href: getLocalizedPath('/blog', lang),
  },
];
---

<header
  x-data="{ open: false }"
  class="transition site-header"
  :class="{ 'bg-primary-500/10 dark:bg-primary-400/10': open, 'bg-stone-50 dark:bg-primary-950': !(open) }"
  role="banner"
  itemscope
  itemtype="https://schema.org/WPHeader"
>
  <div
    class="mx-auto flex max-w-2xl items-center justify-between px-4 py-4 sm:px-6 sm:py-6 lg:max-w-7xl lg:px-8"
  >
    <!-- Brand logo -->
    <div class="flex items-center" itemscope itemtype="https://schema.org/Organization">
      <a
        href={getLocalizedPath('/', lang)}
        class="focus-visible:outline-primary-950 dark:group-focus-visible:outline-primary-200 rounded-md focus-visible:outline focus-visible:outline-2"
        itemprop="url"
        aria-label={t('header.homepage.aria')}
      >
        <span class="sr-only">Alexandra</span>
        <img 
          src="/assets/alexandra-2.png" 
          alt={t('header.logo.alt')} 
          class="w-20 md:w-28"
          itemprop="logo"
          width="160"
          height="40"
          loading="eager"
        >
      </a>
      <div class="ml-4">
        <p itemprop="memberOf">{t('header.registration')}</p>
      </div>
    </div>

    <!-- Actions -->
    <div class="-mr-2 flex items-center space-x-2 sm:space-x-3">
      <!-- Language switcher - only visible on desktop -->
      <div class="hidden md:flex items-center space-x-2">
        {Object.entries(languages).map(([code, name]) => (
          <a 
            href={getLocalizedPath(Astro.url.pathname, code as keyof typeof languages)}
            class={`px-2 py-1 text-sm font-medium rounded-md transition ${lang === code ? 'bg-primary-100 dark:bg-primary-800 text-primary-600 dark:text-primary-400 font-bold' : 'text-primary-950 dark:text-primary-200 hover:bg-primary-50 dark:hover:bg-primary-900 hover:text-primary-600 dark:hover:text-primary-400'}`}
            aria-current={lang === code ? 'page' : undefined}
            data-lang-preference={code}
          >
            {name}
          </a>
        ))}
      </div>
      <!-- Toggle theme mode -->
   

      <!-- Toggle menu -->
      <button
        type="button"
        class="text-primary-950 dark:text-primary-200 hover:bg-primary-500/10 dark:hover:bg-primary-400/10 ring-primary-950 inline-flex h-14 w-14 items-center justify-center rounded-full transition focus:outline-none focus-visible:ring-2"
        @click="open = !open"
        @mousedown="if (open) $event.preventDefault()"
        aria-controls="website-menu"
        aria-expanded="false"
        :aria-expanded="open.toString()"
      >
        <span class="sr-only">{t('header.toggle.menu')}</span>
        <svg
          x-cloak
          class="h-8 w-8"
          :class="{ 'hidden': open, 'block': !(open) }"
          xmlns="http://www.w3.org/2000/svg"
          fill="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path d="M19 8H5V10H19V8ZM19 14H5V16H19V14Z"></path>
        </svg>
        <svg
          x-cloak
          class="h-8 w-8"
          :class="{ 'block': open, 'hidden': !(open) }"
          xmlns="http://www.w3.org/2000/svg"
          fill="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            d="M12.0007 10.5865L16.9504 5.63672L18.3646 7.05093L13.4149 12.0007L18.3646 16.9504L16.9504 18.3646L12.0007 13.4149L7.05093 18.3646L5.63672 16.9504L10.5865 12.0007L5.63672 7.05093L7.05093 5.63672L12.0007 10.5865Z"
          ></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Menu content -->
  <div
    class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8"
    id="website-menu"
    x-cloak
    x-show="open"
    x-collapse
    x-collapse.duration.500ms
  >
    <div class="grid grid-cols-1 gap-16 pb-24 pt-6 lg:grid-cols-2 lg:pt-12">
      <!-- Mobile language switcher - inside menu -->
      <div class="mb-1 md:hidden border-b border-primary-900/10 dark:border-primary-300/10 pb-1">
        <p class="text-sm font-medium text-primary-950/70 dark:text-primary-200/70 mb-1">
          {t('language')}:
        </p>
        <div class="flex flex-wrap gap-2">
          {Object.entries(languages).map(([code, name]) => (
            <a 
              href={getLocalizedPath(Astro.url.pathname, code as keyof typeof languages)}
              class={`px-3 py-2 text-sm font-medium rounded-md transition ${lang === code ? 'bg-primary-100 dark:bg-primary-800 text-primary-600 dark:text-primary-400 font-bold' : 'text-primary-950 dark:text-primary-200 hover:bg-primary-50 dark:hover:bg-primary-900 hover:text-primary-600 dark:hover:text-primary-400'}`}
              aria-current={lang === code ? 'page' : undefined}
              data-lang-preference={code}
            >
              {name}
            </a>
          ))}
        </div>
      </div>
      <div
        class="bg-primary-500/10 dark:bg-primary-400/10 hidden items-center justify-center rounded-3xl px-6 py-8 lg:flex"
      >
        <p
          class="text-primary-950/70 dark:text-primary-200/70 max-w-sm text-xl italic leading-loose"
        >
          {t('header.menu.message')}
        </p>
      </div>

      <!-- Navigation -->
      <nav 
        class="divide-primary-900/10 dark:divide-primary-300/10 flex flex-col gap-1 divide-y" 
        itemscope 
        itemtype="https://schema.org/SiteNavigationElement"
        aria-label={t('header.navigation.aria')}
      >
        {
          links.map((link) => (
            <a
              href={link.href}
              class="text-primary-950 dark:text-primary-200 group inline-flex py-6 text-3xl font-medium tracking-tight transition focus-visible:outline-none sm:py-8 sm:text-4xl"
              itemprop="url"
              aria-label={link.name}
            >
              <div class="group-focus-visible:outline-primary-950 dark:group-focus-visible:outline-primary-200 flex flex-1 items-center justify-between rounded-3xl group-focus-visible:outline group-focus-visible:outline-2 group-focus-visible:outline-offset-2">
                <div class="flex items-center gap-6">
                  <span class="text-xs">{link.ref}</span>
                  <span class="group-hover:underline">{link.name}</span>
                </div>
                <svg
                  class="text-primary-600 dark:text-primary-400 h-6 w-6 sm:h-8 sm:w-8"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                  aria-hidden="true"
                >
                  <path d="M16.0037 9.41421L7.39712 18.0208L5.98291 16.6066L14.5895 8H7.00373V6H18.0037V17H16.0037V9.41421Z" />
                </svg>
              </div>
            </a>
          ))
        }
      </nav>
    </div>
  </div>
</header>
