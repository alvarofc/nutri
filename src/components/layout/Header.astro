---
import { getLangFromUrl, useTranslations, getLocalizedPath, languages } from '../../i18n/ui';
import Logo from './Logo.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const links = [
  {
    name: t('nav.about'),
    href: getLocalizedPath('/about', lang),
  },
  {
    name: t('nav.pricing'),
    href: getLocalizedPath('/pricing', lang),
  },
  {
    name: t('nav.contact'),
    href: getLocalizedPath('/contact', lang),
  },
  {
    name: t('nav.blog'),
    href: getLocalizedPath('/blog', lang),
  },
];

const bookingPath = getLocalizedPath('/booking', lang);
---

<header
  x-data="{ open: false }"
  class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-md border-b border-brand-black/5"
  role="banner"
  itemscope
  itemtype="https://schema.org/WPHeader"
>
  <div class="mx-auto max-w-7xl">
    <div class="flex items-center justify-between px-4 py-4 sm:px-6 lg:px-8">
      <!-- Left: Logo -->
      <Logo />

      <!-- Center: Navigation Links (Desktop) -->
      <nav class="hidden lg:flex items-center gap-8" aria-label={t('header.navigation.aria')}>
        {links.map((link) => (
          <a
            href={link.href}
            class="text-sm font-medium text-brand-black/70 hover:text-brand-accent transition-colors"
          >
            {link.name}
          </a>
        ))}
      </nav>

      <!-- Right: Actions -->
      <div class="hidden lg:flex items-center gap-6">
        <!-- Language Switcher -->
        <div class="flex items-center gap-2">
          {Object.entries(languages).map(([code, name]) => (
            <a
              href={getLocalizedPath(Astro.url.pathname, code as keyof typeof languages)}
              class={`text-xs font-medium uppercase tracking-wide transition-colors ${
                lang === code
                  ? 'text-brand-black'
                  : 'text-brand-muted hover:text-brand-black'
              }`}
              aria-current={lang === code ? 'page' : undefined}
              data-lang-preference={code}
            >
              {code}
            </a>
          ))}
        </div>

        <!-- CTA Button -->
        <a
          href={bookingPath}
          class="bg-brand-accent text-white px-6 py-2.5 text-sm font-medium rounded-full hover:bg-brand-accent/90 transition-colors"
        >
          {t('nav.booking')}
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        type="button"
        class="lg:hidden inline-flex items-center justify-center w-10 h-10 text-brand-black"
        @click="open = !open"
        aria-controls="mobile-menu"
        :aria-expanded="open.toString()"
      >
        <span class="sr-only">{t('header.toggle.menu')}</span>
        <svg
          x-show="!open"
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
        <svg
          x-show="open"
          x-cloak
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div
    id="mobile-menu"
    x-show="open"
    x-cloak
    x-collapse
    class="lg:hidden bg-white border-t border-brand-black/5"
  >
    <nav class="flex flex-col px-6 py-8 gap-6">
      {links.map((link) => (
        <a
          href={link.href}
          class="text-lg font-medium text-brand-black hover:text-brand-accent transition-colors"
        >
          {link.name}
        </a>
      ))}
      
      <!-- Mobile Language Switcher -->
      <div class="flex items-center gap-4 pt-6 border-t border-brand-black/10">
        {Object.entries(languages).map(([code, name]) => (
          <a
            href={getLocalizedPath(Astro.url.pathname, code as keyof typeof languages)}
            class={`text-sm font-medium ${
              lang === code ? 'text-brand-black' : 'text-brand-muted'
            }`}
            data-lang-preference={code}
          >
            {name}
          </a>
        ))}
      </div>

      <!-- Mobile CTA -->
      <a
        href={bookingPath}
        class="mt-4 bg-brand-accent text-white px-6 py-4 text-center font-medium rounded-full"
      >
        {t('nav.booking')}
      </a>
    </nav>
  </div>
</header>

<!-- Spacer for fixed header -->
<div class="h-[72px]"></div>
