---
import { getLangFromUrl, useTranslations, getLocalizedPath } from '../../i18n/ui';
import Logo from './Logo.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const footerLinks = [
  {
    name: t('nav.home'),
    href: getLocalizedPath('/', lang),
  },
  {
    name: t('nav.about'),
    href: getLocalizedPath('/about', lang),
  },
  {
    name: t('nav.pricing'),
    href: getLocalizedPath('/pricing', lang),
  },
  {
    name: t('nav.contact'),
    href: getLocalizedPath('/contact', lang),
  },
  {
    name: t('footer.privacy'),
    href: getLocalizedPath('/privacy', lang),
  },
];

const socials = [
  { name: 'Instagram', href: 'https://instagram.com/tu.nutri.alexandra' },
  { name: 'Facebook', href: 'https://facebook.com/' },
];
---

<footer class="bg-brand-cream border-t border-brand-light/50" aria-labelledby="footer-heading">
  <h2 id="footer-heading" class="sr-only">{t('footer.heading')}</h2>
  
  <!-- Main Footer Content -->
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-16 sm:py-20">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-8">
      
      <!-- Left: Brand & Tagline -->
      <div class="lg:col-span-5">
        <div class="mb-6">
          <Logo />
        </div>
        <p class="text-brand-muted text-base max-w-sm mb-8">
          {lang === 'es' 
            ? 'Nutrición basada en ciencia. Resultados reales. Sin dietas restrictivas.'
            : 'Science-based nutrition. Real results. No restrictive diets.'}
        </p>
        
        <!-- Social Links -->
        <div class="flex gap-4">
          {socials.map((social) => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="text-sm font-medium text-brand-muted hover:text-brand-accent transition-colors"
            >
              {social.name}
            </a>
          ))}
        </div>
      </div>

      <!-- Right: Navigation Links -->
      <div class="lg:col-span-7">
        <div class="grid grid-cols-2 sm:grid-cols-3 gap-8">
          <!-- Quick Links -->
          <div>
            <h3 class="text-xs font-medium uppercase tracking-widest text-brand-muted mb-6">
              {t('footer.company')}
            </h3>
            <ul class="space-y-4">
              {footerLinks.slice(0, 3).map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="text-sm text-brand-gray hover:text-brand-accent transition-colors"
                  >
                    {link.name}
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <!-- More Links -->
          <div>
            <h3 class="text-xs font-medium uppercase tracking-widest text-brand-muted mb-6">
              {t('footer.legal')}
            </h3>
            <ul class="space-y-4">
              {footerLinks.slice(3).map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="text-sm text-brand-gray hover:text-brand-accent transition-colors"
                  >
                    {link.name}
                  </a>
                </li>
              ))}
            </ul>
          </div>

          <!-- Contact Info -->
          <div>
            <h3 class="text-xs font-medium uppercase tracking-widest text-brand-muted mb-6">
              {t('contact.title')}
            </h3>
            <ul class="space-y-4 text-sm text-brand-gray">
              <li>{t('contact.address.line1')}</li>
              <li>{t('contact.address.line2')}</li>
              <li class="text-brand-black font-medium">{t('contact.phone.number')}</li>
              <li class="text-brand-accent">{t('contact.email.address')}</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-brand-light/50">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex flex-col sm:flex-row justify-between items-center gap-4 text-xs text-brand-muted">
        <p>© {new Date().getFullYear()} Alexandra Ivanova. {t('footer.rights')}</p>
        <p class="flex items-center gap-2">
          <span class="w-2 h-2 bg-brand-accent rounded-full"></span>
          <span>MAD01541 · {lang === 'es' ? 'Dietista-Nutricionista Colegiada' : 'Registered Dietitian-Nutritionist'}</span>
        </p>
      </div>
    </div>
  </div>
</footer>
