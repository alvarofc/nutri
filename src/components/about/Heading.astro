---
import { getLangFromUrl, useTranslations } from '../../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="py-20 sm:py-28 bg-brand-cream">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col items-center text-center gap-6">
      <!-- Badge -->
      <span class="inline-flex items-center gap-2 rounded-full bg-brand-accent/10 px-4 py-1.5 text-sm font-medium text-brand-accent">
        <span class="h-1.5 w-1.5 rounded-full bg-brand-accent"></span>
        {lang === 'en' ? 'My Story' : 'Mi Historia'}
      </span>
      
      <h1 class="font-serif text-4xl sm:text-5xl lg:text-6xl text-brand-black leading-tight tracking-tight max-w-3xl">
        {t('about.heading.title')}
      </h1>
      
      <p class="text-lg sm:text-xl text-brand-muted max-w-2xl leading-relaxed">
        {t('about.heading.subtitle')}
      </p>
    </div>
  </div>
</section>
