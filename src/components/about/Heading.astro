---
import { getLangFromUrl, useTranslations } from '../../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="py-24 sm:py-32 bg-stone-50 border-b border-blue-900/10">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-8">
      <h1 class="font-serif text-5xl sm:text-7xl lg:text-8xl text-blue-950 leading-[0.9] tracking-tight">
        {t('about.heading.title')}
      </h1>
      <div class="w-full h-px bg-blue-900/20 max-w-xs"></div>
      <p class="text-xl sm:text-2xl font-light text-blue-900/80 max-w-2xl leading-relaxed">
        {t('about.heading.subtitle')}
      </p>
    </div>
  </div>
</section>
