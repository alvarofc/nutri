---
import { getLangFromUrl, useTranslations } from '../../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const values = [
  [
    {
      ref: '01',
      name: t('about.values.excellence.name'),
      description: t('about.values.excellence.description'),
    },
    {
      ref: '02',
      name: t('about.values.innovation.name'),
      description: t('about.values.innovation.description'),
    },
  ],
  [
    {
      ref: '03',
      name: t('about.values.teamwork.name'),
      description: t('about.values.teamwork.description'),
    },
    {
      ref: '04',
      name: t('about.values.respect.name'),
      description: t('about.values.respect.description'),
    },
  ],
];
---

<section class="py-24 sm:py-32 bg-stone-50 border-t border-blue-900/10">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-16">
      <h2 class="font-serif text-4xl sm:text-5xl text-blue-950">{t('about.values.title')}</h2>
      
      <div class="grid gap-x-12 gap-y-16 lg:grid-cols-2">
        {
          values.flat().map((value) => (
            <div class="flex flex-col gap-6 group border-t border-blue-900/10 pt-8 transition-colors hover:border-blue-900/40">
              <span class="font-mono text-sm text-blue-900/50">{value.ref}</span>
              <h3 class="font-serif text-3xl text-blue-950">{value.name}</h3>
              <p class="text-lg font-light leading-relaxed text-blue-900/70 max-w-md">
                {value.description}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
