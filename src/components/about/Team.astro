---
import { getLangFromUrl, useTranslations } from '../../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const team = [
  {
    name: t('team.floyd.name'),
    image: '/assets/team-1.webp',
    job: t('team.floyd.job'),
  },
  {
    name: t('team.emma.name'),
    image: '/assets/team-2.webp',
    job: t('team.emma.job'),
  },
  {
    name: t('team.emily.name'),
    image: '/assets/team-3.webp',
    job: t('team.emily.job'),
  },
];
---

<section class="py-24 sm:py-32 bg-stone-50 border-t border-blue-900/10">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-16">
      <h2 class="font-serif text-4xl sm:text-5xl text-blue-950">{t('team.title')}</h2>
      
      <ul role="list" class="grid grid-cols-1 gap-x-8 gap-y-16 sm:grid-cols-2 lg:grid-cols-3">
        {
          team.map((item) => (
            <li class="group">
              <div class="aspect-[3/4] w-full overflow-hidden bg-stone-100 mb-6">
                <img 
                  class="h-full w-full object-cover grayscale transition-all duration-500 group-hover:grayscale-0 group-hover:scale-105" 
                  src={item.image} 
                  alt={item.name} 
                />
              </div>
              <h3 class="font-serif text-2xl text-blue-950">{item.name}</h3>
              <p class="text-blue-900/60 font-light mt-1">{item.job}</p>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</section>
