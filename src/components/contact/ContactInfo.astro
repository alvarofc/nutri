---
import { getLangFromUrl, useTranslations } from '../../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="py-20 sm:py-28 bg-brand-cream">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <!-- Header -->
    <div class="text-center mb-12">
      <span class="inline-flex items-center gap-2 rounded-full bg-brand-accent/10 px-4 py-1.5 text-sm font-medium text-brand-accent mb-4">
        {lang === 'en' ? 'Get in Touch' : 'Contacto'}
      </span>
      <h1 class="font-serif text-4xl sm:text-5xl text-brand-black mb-4">
        {lang === 'en' ? "Let's Connect" : 'Conectemos'}
      </h1>
      <p class="text-lg text-brand-muted max-w-xl mx-auto">
        {lang === 'en' ? "I'd love to hear from you. Choose the best way to reach me." : 'Me encantar√≠a saber de ti. Elige la mejor forma de contactarme.'}
      </p>
    </div>
    
    <dl class="flex justify-center">
      <!-- Email / WhatsApp -->
      <div class="bg-white rounded-2xl px-6 py-8 shadow-sm hover:shadow-lg transition-all duration-300 group">
        <dt class="sr-only">{t('contact.email.label')}</dt>
        <dd class="flex flex-col items-center text-center gap-4">
          <div class="w-14 h-14 rounded-full bg-green-100 flex items-center justify-center group-hover:bg-green-500 group-hover:scale-110 transition-all duration-300">
            <svg
              class="text-green-600 h-6 w-6 group-hover:text-white transition-colors"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="currentColor"
              aria-hidden="true"
            >
              <path
                d="M7.29117 20.8242L2 22L3.17581 16.7088C2.42544 15.3056 2 13.7025 2 12C2 6.47715 6.47715 2 12 2C17.5228 2 22 6.47715 22 12C22 17.5228 17.5228 22 12 22C10.2975 22 8.6944 21.5746 7.29117 20.8242ZM7.58075 18.711L8.23428 19.0605C9.38248 19.6745 10.6655 20 12 20C16.4183 20 20 16.4183 20 12C20 7.58172 16.4183 4 12 4C7.58172 4 4 7.58172 4 12C4 13.3345 4.32549 14.6175 4.93949 15.7657L5.28896 16.4192L4.63416 19.3658L7.58075 18.711Z"
              ></path>
            </svg>
          </div>
          <div>
            <h3 class="font-medium text-brand-black mb-1">WhatsApp</h3>
            <p class="text-brand-muted text-sm">{t('contact.email.address')}</p>
          </div>
        </dd>
      </div>
    </dl>
  </div>
</section>
