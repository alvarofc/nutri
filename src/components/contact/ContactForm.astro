---
import { getLangFromUrl, useTranslations } from '../../i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const errors = { username: "", email: "", phone: "" };
if (Astro.request.method === "POST") {
  try {
    const data = await Astro.request.formData();
    const name = data.get("full-name");
    const email = data.get("email");
    const phone = data.get("phone");
    const password = data.get("password");
    if (typeof name !== "string" || name.length < 1) {
      errors.username += t('contact.form.error.name');
    }
    if (typeof email !== "string" || !email.includes("@")) {
      errors.email += t('contact.form.error.email');
    } 
    if (typeof phone !== "string" || phone.length < 6) {
      errors.phone += t('contact.form.error.phone');
    }
    const hasErrors = Object.values(errors).some(msg => msg)
    if (!hasErrors) {
      const response = await fetch("/api/register", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ name, email, phone, password }),
      }); 
      return Astro.redirect("/");
    }
  } catch (error) {
    if (error instanceof Error) {
      console.error(error.message);
    }
  }
}
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="grid gap-12 lg:grid-cols-2 lg:gap-8">
      <div class="flex flex-col gap-4 sm:gap-6">
        <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">{t('contact.form.title')}</h2>
        <p class="text-primary-950/70 dark:text-primary-200/70 max-w-lg text-lg sm:text-xl">
          {t('contact.form.subtitle')}
        </p>
      </div>
      <form action="register" method="POST" class="mt-3 flex flex-col gap-y-6">
        <!-- Full name input -->
        <div>
          <label for="full-name" class="sr-only">{t('contact.form.name')}</label>
          <input
            type="text"
            name="full-name"
            id="full-name"
            autocomplete="name"
            class="hover:ring-blue-900 focus:ring-blue-900 dark:hover:ring-blue-800 dark:focus:ring-blue-800 bg-white dark:bg-primary-950 ring-blue-900/40 dark:ring-blue-200/40 placeholder:text-primary-950/60 dark:placeholder:text-primary-200/60 block w-full appearance-none border-0 px-4 py-4 text-base ring-1 transition focus:outline-none focus:ring-2"
            placeholder={t('contact.form.name')}
            required
          />
          {errors.username && <p>{errors.username}</p>}
        </div>

        <!-- Email input -->
        <div>
          <label for="email" class="sr-only">{t('contact.form.email')}</label>
          <input
            type="email"
            name="email"
            id="email"
            autocomplete="email"
            class="hover:ring-blue-900 focus:ring-blue-900 dark:hover:ring-blue-800 dark:focus:ring-blue-800 bg-white dark:bg-primary-950 ring-blue-900/40 dark:ring-blue-200/40 placeholder:text-primary-950/60 dark:placeholder:text-primary-200/60 block w-full appearance-none border-0 px-4 py-4 text-base ring-1 transition focus:outline-none focus:ring-2"
            placeholder={t('contact.form.email')}
            required
          />
        </div>
        <!-- Phone input -->
        <div>
          <label for="phone" class="sr-only">{t('contact.form.phone')}</label>
          <input
            type="tel"
            name="phone"
            id="phone"
            autocomplete="tel"
            class="hover:ring-blue-900 focus:ring-blue-900 dark:hover:ring-blue-800 dark:focus:ring-blue-800 bg-white dark:bg-primary-950 ring-blue-900/40 dark:ring-blue-200/40 placeholder:text-primary-950/60 dark:placeholder:text-primary-200/60 block w-full appearance-none border-0 px-4 py-4 text-base ring-1 transition focus:outline-none focus:ring-2"
            placeholder={t('contact.form.phone')}
            pattern="^[\+]?[(]?[0-9]{3}[)]?[-\s\.]?[0-9]{3}[-\s\.]?[0-9]{4,6}$"
            required
          />
        </div>

        <!-- Message textarea -->
        <div>
          <label for="message" class="sr-only">{t('contact.form.message')}</label>
          <textarea
            name="message"
            id="message"
            rows="3"
            class="hover:ring-blue-900 focus:ring-blue-900 dark:hover:ring-blue-800 dark:focus:ring-blue-800 bg-white dark:bg-primary-950 ring-blue-900/40 dark:ring-blue-200/40 placeholder:text-primary-950/60 dark:placeholder:text-primary-200/60 block w-full appearance-none border-0 px-4 py-4 text-base ring-1 transition focus:outline-none focus:ring-2"
            placeholder={t('contact.form.message')} required></textarea>
        </div>

        <div>
          <button
            class="bg-blue-900 dark:bg-blue-800 hover:bg-blue-800 dark:hover:bg-blue-700 focus-visible:outline-blue-900 dark:focus-visible:outline-blue-800 dark:text-white inline-flex items-center justify-center border border-transparent px-5 py-3 text-base font-medium text-white transition focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2"
            type="submit"
          >
            {t('contact.form.submit')}
          </button>
        </div>
      </form>
    </div>
  </div>
</section>
